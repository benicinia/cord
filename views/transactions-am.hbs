
    
{{!< usrnv-am}}
  <!-- Transactions content -->
   <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <h2 style="margin-left: 7em; margin-top: -1em; color:#663366;">የወጪና ገቢ ታሪክ</h2>
      <div class="table-responsive" style="margin-left: 15em;">
       <table class="table table-striped table-sm " id="dataTable" width="100%" cellspacing="0" >

          <thead>
         <tr style="background-color: #663366;">
                        <th><h7 style="color:#ffc107">የልውውጥ ቁጥር</h7></th>
                        <th><h7 style="color:#ffc107">ቀንና ሰዐት</h7> </th>
                        <th><h7 style="color:#ffc107">አስተያየት</h7></th>
                        <th><h7 style="color:#ffc107">የግዥ ዝርዝር</h7></th>
                         <th><h7 style="color:#ffc107">ሂሳብ</h7></th>
                        <th><h7 style="color:#ffc107">ወጭ የተደረገ</h7></th>
                        <th><h7 style="color:#ffc107">ቀሪ ሂሳብ</h7></th>
                        
                    </thead>
                   

     <tbody > 
        
        {{#if data}}
        {{#each data}}
        <tr>
            <td>{{this.trans_id}} </td>
            <td>{{this.trans_date}}</td>
            <td>{{this.remarks}}</td>
            <td><a href="/order?t_id={{this.trans_id}}">ክፈት</a></td>
            <td>{{this.debit}}</td>
            <td>{{this.credit}}</td>
            <td>{{this.balance}}</td>
            
           
        </tr>
       {{/each}}
        </tbody>
        
        {{else}}
            
                <p id="none"> ምንም ነገር አልተገኘም :(</p>
            {{/if}}
       
     </table>
     
     <ul class="list-inline">
      <li class="list-inline-item"><a href="#">English</a></li>
      <li class="list-inline-item"><a href="#">አማርኛ</a></li>
      <li class="list-inline-item"><a href="#">Oromiffa</a></li>
      <li class="list-inline-item"><a href="#">somali</a></li>
      <li class="list-inline-item"><a href="#">ትግረኛ</a></li>
    </ul>
      </div>
       </div>
</div>

    </main>
 
 